<div {{bind-attr class='questionHasAnswer:activityfeed--story-answered :activityfeed--story'}}>
  <div class="media">
    <div class="pull-left">
      {{#link-to 'politician' askedByPolitician}}
        {{{askedByPolitician.thumbImage}}}
      {{/link-to}}
      {{#link-to 'politician' askedToPolitician}}
        {{{askedToPolitician.thumbImage}}}
      {{/link-to}}
      <div {{bind-attr class='askedByPolitician.assembly :img-circle :thumbnail :avatar'}}></div>
    </div>
    <div class="media-body">
      <header class="activityfeed--header">
        {{#link-to 'question' question tagName='h3'}}
          {{title}}
        {{/link-to}}
      </header>
      <small class="activityfeed--header--authors text-muted small">
        Posée
        {{format-date dateAsked}}
        par
        {{#link-to 'politician' askedByPolitician}}
          <strong>{{askedByPolitician.fullName}}</strong>
        {{/link-to}}
        à
        {{#link-to 'politician' askedToPolitician}}
          <strong>{{askedToPolitician.fullName}}</strong>
        {{/link-to}}
      </small>
      <small>
        {{#if questionHasAnswer}}
          <strong class="activityfeed--header--authors--answer-added text-success">
            <i class="glyphicon glyphicon-share-alt text-success"></i>
            Réponse ajoutée
          </strong>
          {{!-- TODO replace by real answered_at date --}}
          {{!-- {{format-date dateAsked}} --}}
        {{else}}
          <span class="activityfeed--header--authors--answer-added">
            <i class="glyphicon glyphicon-share-alt text-muted"></i>
            Pas de réponse
          </span>
        {{/if}}
      </small>
      <div class="activityfeed--excerpt">
        <p class='text-muted'>{{{clean-text excerpt}}}</p>
        <p>
          {{#link-to 'question' question class='btn btn-xs btn-default'}}
            Lire la suite
          {{/link-to}}
        </p>
      </div>
    </div>
  </div>
</div>
