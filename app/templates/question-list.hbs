<div {{bind-attr class='questionHasAnswer:activityfeed--story-answered :activityfeed--story'}}>
  <div class="media">
    <div class="pull-left hidden-xs hidden-sm">
      <div {{bind-attr class='askedBy.assembly :img-circle :thumbnail :avatar :pull-left :centered-background'}}></div>
      {{#link-to 'politician' askedBy class='pull-left'}}
        {{{askedBy.thumbImage}}}
      {{/link-to}}
      {{#link-to 'politician' askedTo class='pull-left'}}
        {{{askedTo.thumbImage}}}
      {{/link-to}}
      <div class="clearfix"></div>
      <div class="centered">
        {{#if questionHasAnswer}}
          <strong class="activityfeed--header--authors--answer-added label label-success">
            <i class="glyphicon glyphicon-share-alt text-success"></i>
            Réponse ajoutée
          </strong>
        {{/if}}
      </div>
    </div>
    <div class="media-body">
      <header class="activityfeed--header">
        {{#link-to 'question' this}}
          <h4>{{title}}</h4>
        {{/link-to}}
      </header>
      <small class="activityfeed--header--authors small">
        Posée
        {{format-date dateAsked}}
        par
        {{#link-to 'politician' askedBy}}
          <strong>
            {{askedBy.fullName}}
            {{#if askedBy.partyName}}
              ({{askedBy.partyName}})
            {{/if}}
          </strong>
        {{/link-to}}
        à
        {{#link-to 'politician' askedTo}}
          <strong>
            {{askedTo.fullName}}
            {{#if askedTo.partyName}}
              ({{askedTo.partyName}})
            {{/if}}
          </strong>
        {{/link-to}}
      </small>
    </div>
  </div>
</div>
