<div class="panel-heading">
  Informations
</div>
<div class="panel-body profile--infos">
  <dl>
    <dt>Nom</dt>
    <dd>{{model.fullName}} ({{model.party}})</dd>
    {{#if model.party}}
      <dt>Parti</dt>
      <dd>
        <img {{bind-attr src='model.partyThumbSmall'}}/ class='thumbnail'>
      </dd>
    {{/if}}
    {{#if model.function}}
      <dt>Fonction</dt>
      <dd>
        {{model.function}}
      </dd>
    {{/if}}
    {{#if model.address}}
      <dt>Adresse</dt>
      <dd>
        {{model.address}}
        ,<br>
        {{model.postalCode}}
        ,<br>
        {{model.town}}
      </dd>
    {{/if}}
    {{#if model.phone}}
      <dt>Téléphone</dt>
      <dd>{{model.phone}}</dd>
    {{/if}}
    {{#if model.fax}}
      <dt>Fax</dt>
      <dd>{{model.fax}}</dd>
    {{/if}}
    {{#if model.email}}
      <dt>Email</dt>
      <dd>{{model.email}}</dd>
    {{/if}}
    {{#if model.site}}
      <dt>Site</dt>
      <dd>
        <a {{bind-attr href=model.site}}>
          {{model.site}}
        </a>
      </dd>
    {{/if}}
  </dl>
</div>
